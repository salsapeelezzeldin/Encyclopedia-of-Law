                                                    <ul>
                                                        <details class="tree-nav__item is-expandable">
                                                            <summary class="tree-nav__item-title">
                                                                <h3>الكتب</h3>
                                                            </summary>
                                                            <ul>

                                                                @foreach (Bookكتابقسمباب bb in Model.books)
                                                                {
                                                                    @if (bb.IdS == pp.IdS)
                                                                    {

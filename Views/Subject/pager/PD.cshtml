@using Encyclopedia_Of_Laws.Views.Subject.pager
@model SubjectPager


@* Search مش مهمه   *@
<div class="container btn-group">

    <div class="col-4 p-0 justify-content-end">
        <form asp-controller="Subject" asp-action="@Model.Action">
            <span class="btn btn-group">
                <input class="form-control" type="text" name="SearchText" value="@Model.SearchText" placeholder="Search key">
                <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search" />

            </span>

        </form>
    </div>



    @* pager  *@
    <div class="container">
        @if (Model.STotalPages > 0)
        {
            <ul class="pagination justify-content-end ">

                @if (Model.SCurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Subject" asp-action="Index" asp-route-pg="1"> First</a>

                    </li>
                    <li>
                        <a class="page-link" asp-controller="Subject" asp-action="Index" asp-route-pg="@(Model.SCurrentPage - 1)"> Previous</a>
                    </li>

                }

                @for (var pge = Model.SStartPage; pge <= Model.SEndPage; pge++)
                {
                    <li class="page-item @(pge == Model.SCurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Subject" asp-action="Index" asp-route-pg="@pge">@pge</a>

                    </li>
                }

                @if (Model.SCurrentPage < Model.STotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Subject" asp-action="Index" asp-route-pg="@(Model.SCurrentPage +1)"> Next</a>

                    </li>
                    <li>
                        <a class="page-link" asp-controller="Subject" asp-action="Index" asp-route-pg="@(Model.STotalPages)"> Last</a>
                    </li>

                }

            </ul>
        }
    </div>


</div>
@model Encyclopedia_Of_Laws.ViewModels.AllChaptersViewModel
@{
    ViewData["Title"] = "ChapterPage";
    //   Layout = "~/Views/Shared/_StaffLayout.cshtml";
    ViewData["Action"] = "Create_Chapter";
    ViewData["Possible_Search"] = "أسم الفصل";
    int i = 1;
    int k = 1;
    string blabla;
}
@section Scripts{
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/js/ChapterController.js"></script>
}



<div class="card">
    <div class="card-body" style="padding: 20px;">

        <!-- Table with hoverable rows -->
        <table class="table table-hover" style="width: 100%;">
                <thead>
                    <tr>
                        <th>العمليات</th>
                        <th>اسم الفصل</th>
                        <th>رقم الفصل</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var value in Model.chapters)
                    {
                        k = 1;
                        i = 1;
                        <tr onclick="showHideRow(@value.IdChapter);" class="table-rows">
                            <td class="processes">
                                <a class="btn btn-success" asp-action="Add_Contents" asp-route-id="@value.IdChapter">
                                    إضاقة نقاط
                                    <i class="bi bi-plus"></i>
                                </a>

                                <a class="btn btn-primary" asp-action="Edit_Chapter" asp-route-id="@value.IdChapter">
                                    تعديل
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <div class="first-row">@value.اسمالفصل</div>
                                @foreach (Chapter2 mm in Model.chapter2)
                                {
                                    blabla = "hidden_row" + i + "_" + value.IdChapter;
                                    @if (mm.IdChapter == value.IdChapter)
                                    {

                                        <div id=@blabla class="hidden_row">

                                            <a>@mm.اسمالنقطه  __|</a>

                                            @foreach (Chapter3 mo in Model.chapter3)
                                            {
                                                @if (mo.IdCh2 == mm.IdCh2)
                                                {
                                                    <br />
                                                    <a> @mo.محتويالنقطه ____| &nbsp &nbsp &nbsp</a>
                                                }
                                            }
                                        </div>
                                        i++;
                                    }

                                }
                            </td>
                            <td style="text-align:right">
                                @value.رقمالفصل
                            </td>

                        </tr>
                    }
                </tbody>
        </table>
        <!-- End Table with hoverable rows -->

    </div>
</div>
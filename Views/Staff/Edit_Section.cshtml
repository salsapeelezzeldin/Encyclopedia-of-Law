@model Encyclopedia_Of_Laws.Models.Sectionكتابقسم

@{
    ViewData["Title"] = "Edit_Section";
}
<link href="~/css/CreatePages.css" rel="stylesheet" />
<script src="~/js/Collapse.js"></script>
<h1 style="text-align:right">تعديل الباب</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit_Section">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdP" />
            <div class="form-group">
                <label asp-for="رقمالباب" class="control-label"></label>
                <input id="required"  asp-for="رقمالباب" class="form-control" style="font-size:23px" required />
                <span asp-validation-for="رقمالباب" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="اسمالباب" class="control-label"></label>
                <input id="required" asp-for="اسمالباب" class="form-control" style="font-size:23px" required />
                <span asp-validation-for="اسمالباب" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حـفـظ"  id="submit" onclick="validate()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a id="back" asp-action="SectionPage"><== الرجوع إلي الأبواب</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
